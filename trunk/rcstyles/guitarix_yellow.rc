style "guitarix-paintbox"
{
  GxPaintBox::skin-gradient = {
    {     0, 52429, 19661, 1311, 39322 }, # 0, 0.8, 0.3,  0.02,  0.6
    { 65536, 13107,  3932,  328, 39322 }} # 1, 0.2, 0.06, 0.005, 0.6
