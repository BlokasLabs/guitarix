#
# This is the GTK rc style file for guitarix
#

pixmap_path './:/usr/share/guitarix:/usr/local/share/guitarix'


style "guitarix_suny"
{
  
  
  GtkButton::default_border = { 0, 0, 0, 0 }
  GtkButton::default_outside_border = { 0, 0, 0, 0 }
  GtkButton::button_relief = GTK_RELIEF_NONE
 
  
  fg[NORMAL] = { 0.80, 0.80, 0.80 }	
  fg[ACTIVE] = { 0.80, 0.80, 0.80 }	
  fg[PRELIGHT] = { 1.0, 1.0, 1.0 }
  fg[INSENSITIVE] = { 0.80, 0.80, 0.80 }	
  fg[SELECTED] = { 0.80, 0.80, 0.80 }	
  
  bg[NORMAL] = { 0.0, 0.0, 0.0 }
  bg[PRELIGHT] = "#1e0000"
  bg[ACTIVE] = { 0.0, 0.0, 0.0 }
  bg[INSENSITIVE] = "#c4c0c0"
  bg[SELECTED] = "#000094"
 
  text[NORMAL] = { 0.80, 0.80, 0.80 }	
  text[ACTIVE] = { 0.80, 0.80, 0.80 }	
  text[PRELIGHT] = { 0.80, 0.80, 0.80 }	
  text[INSENSITIVE] = { 0.80, 0.80, 0.80}	
  text[SELECTED] = { 1.0, 1.0, 1.0 }
  
  base[ACTIVE]     = "#272a2f"
  base[NORMAL]      =  "#1a1e20"
  base[PRELIGHT]     = { 0.20, 0.20, 0.20 }
  base[INSENSITIVE]  = "#4c5159"
  base[SELECTED]     = { 0.25, 0.25, 0.25 }
  font_name = "sans 10"
 
}


class "GtkWidget" style:highest "guitarix_suny"
class "GtkLabel" style:highest "guitarix_suny"
class "GtkHScale" style:highest "guitarix_suny"
class "GtkVScale" style:highest "guitarix_suny"
class "GtkCheckButton" style:highest "guitarix_suny"
class "GtkButton" style:highest "guitarix_suny"
class "GtkFrame" style:highest "guitarix_suny"
class "GtkExpander" style:highest "guitarix_suny"


style "guitarix-event_suny"
{ 
 bg_pixmap[NORMAL] = "suny2.jpg"
}

class "GtkEventBox" style:highest "guitarix-event_suny"

style "guitarix-dialog_suny"
{ 
 bg_pixmap[NORMAL] = "suny2.jpg"
}

widget_class "GtkDialog*" style:highest "guitarix-dialog_suny"

style "guitarix-m_suny"
{ 
  fg[NORMAL] = "#8c5214"	
  bg[NORMAL] =  "#450000"
  font_name = "sans 9"
}

class "GtkMenu" style:highest "guitarix-m_suny"
class "GtkMenuBar" style:highest "guitarix-m_suny"

style "b_style_suny"
{
 	engine "pixmap"
	{
		image
		{
			function		= BOX
			recolorable		= TRUE
			state			= NORMAL	
			shadow			= OUT
			file			= "suny.jpg"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
		}
		image
		{
			function		= BOX
			recolorable		= TRUE
			state			= PRELIGHT	
			shadow			= OUT
			file			= "suny1.jpg"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
		}
		image
		{
			function		= BOX
			recolorable		= TRUE
			state			= ACTIVE	
			shadow			= OUT
			file			= "suny.jpg"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
		}
	}
}

